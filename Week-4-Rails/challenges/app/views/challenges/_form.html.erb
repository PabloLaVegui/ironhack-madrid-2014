<%= flash_message %>

<% if @challenge.errors.any? %>
  <ul>
    <% @challenge.errors.full_messages.each do |err_msg| %>
      <li><%= err_msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @challenge, html: {multipart: true} do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :poster %>
  <%= f.file_field :poster %>

  <%= f.submit 'Save challenge!' %>

<% end %>
