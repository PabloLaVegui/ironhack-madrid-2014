<%= link_to "Challenges list", challenges_path %>
<%= link_to "+Add challenge", new_challenge_path %>

<h3><%= @challenge.name %></h3>
<p><%= @challenge.description %></p>
<h5>Date of creation: <%= @challenge.created_at %></h5>

<%= link_to "Edit", edit_challenge_path %>
<%= link_to "Delete", challenge_path(@challenge), method: :delete, data: {confirm: 'Are you sure?'} %>

<p>Votes: <%= @num_votes %></p>
<%= flash_message %>
<%= form_for [@challenge, @vote] do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.submit 'Vote' %>

<% end %>
